<div class="container">
  <h1 class="plugin">Plugin "Chosen"</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <select data-placeholder="Choose a department..." class="chosen-select">
        <option value=""></option>
        <% @departments.each do |department| %>
            <option value="<%= department.id %>"><%= department.libelle %></option>
        <% end %>
      </select>

    </div>
  </div>

  <h1 class="plugin">Plugin "DataTable"</h1>

  <table id="my-table" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Code Postal</th>
        <th>Commune</th>
        <th>Altitude moyenne</th>
        <th>Superficie</th>
        <th>Population</th>
      </tr>
    </thead>
    <tbody>
      <% @communes.each do |commune| %>
        <tr>
          <td><%= commune.postal_code %></td>
          <td><%= commune.commune_name %></td>
          <td><%= commune.altitude_moyenne %></td>
          <td><%= commune.superficie %></td>
          <td><%= commune.population %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th>Code Postal</th>
        <th>Commune</th>
        <th>Altitude moyenne</th>
        <th>Superficie</th>
        <th>Population</th>
      </tr>
    </tfoot>
  </table>

  <div class="spacer"></div>
</div>
