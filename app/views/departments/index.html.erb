<div class="container">
  <h1 class="plugin">Plugin "Chosen"</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <select data-placeholder="Choose a department..." class="chosen-select">
        <option value=""></option>
        <% @departments.each do |department| %>
            <option value="<%= department.id %>"><%= department.libelle %></option>
        <% end %>
      </select>

    </div>
  </div>

  <h1 class="plugin">Plugin "DataTable"</h1>


  <div class="spacer"></div>
</div>
